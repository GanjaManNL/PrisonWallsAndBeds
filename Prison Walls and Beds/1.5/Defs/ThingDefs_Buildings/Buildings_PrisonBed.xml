<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  

 <ThingDef ParentName="BedWithQualityBase" Name="PrisonBed">
    <defName>PrisonBed</defName>
    <label>Prison Bed</label>
    <description>A horrible barred bed covered by a wool blanket for a matress.  Meant only for the scummiest of scum. Very uncomfortable.</description>
    <graphicData>
      <texPath>Things/Building/Furniture/PrisonBed/PrisonBed</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
	        <shaderType>CutoutComplex</shaderType>
      <drawSize>(2,2)</drawSize>
      <damageData>
        <rect>(0,0.05,1,1.95)</rect>
      </damageData>
    </graphicData>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>EndTable</li>
          <li>Dresser</li>
          <li MayRequire="Ludeon.RimWorld.Ideology">SleepAccelerator</li>
        </linkableFacilities>
      </li>
    </comps>

    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <Flammability>0.7</Flammability>
      <Beauty>-1</Beauty>
      <WorkToBuild>700</WorkToBuild>
      <Mass>30</Mass>
      <BedRestEffectiveness>0.7</BedRestEffectiveness>
      <Comfort>0.2</Comfort>
      <ImmunityGainSpeedFactor>1.06</ImmunityGainSpeedFactor>
      <SurgerySuccessChanceFactor>0.97</SurgerySuccessChanceFactor>
	    <TerrorSource MayRequire="Ludeon.RimWorld.Ideology">8</TerrorSource>
    </statBases>
    
    <size>(1,2)</size>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>35</costStuffCount>
    <building>
      <bed_showSleeperBody>True</bed_showSleeperBody>
      <bed_healPerDay>2</bed_healPerDay>
    </building>
    <fillPercent>0.4</fillPercent>
    <pathCost>50</pathCost>
    <staticSunShadowHeight>0.17</staticSunShadowHeight>
    <castEdgeShadows>True</castEdgeShadows>
    <designationHotKey>Misc2</designationHotKey>
    <techLevel>Medieval</techLevel>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
    <uiIconScale>0.90</uiIconScale>
  </ThingDef>

</Defs>
